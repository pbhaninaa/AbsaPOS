<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debit_check_container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.tabs.DebitCheckFragment">

    <!-- LinearLayout to hold your UI components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/title_text_size_16"
        android:gravity="center">

        <!-- First TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference number"
            android:gravity="center"
            android:textSize="@dimen/title_text_size_20" />

        <!-- First EditText for numeric input -->
        <EditText
            android:id="@+id/debit_check_reference_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1"
            android:gravity="center"
            android:textSize="@dimen/title_text_size_20"
            android:inputType="number" /> <!-- Use inputType="number" for numeric input -->

        <!-- Second TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instalment amount"
            android:gravity="center"
            android:textSize="@dimen/title_text_size_20" />

        <!-- Second EditText for numeric input -->
        <EditText
            android:id="@+id/debit_check_instalment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:gravity="center"
            android:textSize="@dimen/title_text_size_20"
            android:inputType="numberDecimal" /> <!-- Use inputType="numberDecimal" for decimal numbers -->

        <!-- Buttons in a horizontal LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Back Button -->
            <Button
                android:id="@+id/debit_check_back_button"
                android:layout_width="@dimen/title_text_size_150"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginEnd="@dimen/title_text_size_16" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/debit_check_continue_button"
                android:layout_width="@dimen/title_text_size_150"
                android:layout_height="wrap_content"
                android:text="Continue" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
