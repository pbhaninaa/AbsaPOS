<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/sim_set_up_container"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.settingsFragments.TerminalOptionsSubFragments.reInstall_terminal.SimSetup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/title_text_size_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_label_in_Sim_set_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FirstLabel"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/second_label_in_Sim_set_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_text_size_20"
                android:gravity="center"
                android:text="SecondLabel"
                android:textSize="15sp"/>
            <!-- Buttons -->
            <Button
                android:id="@+id/first_button_in_Sim_set_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_text_size_20"
                android:layout_marginBottom="@dimen/title_text_size_10"
                android:text="FirstButtonText"/>
            <Button
                android:id="@+id/second_button_in_Sim_set_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_text_size_20"
                android:text="SecondButtonText"
                android:visibility="visible"
                />


        </LinearLayout>
    </ScrollView>

</FrameLayout>