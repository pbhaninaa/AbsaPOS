<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cancel_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/title_text_size_16"
    tools:context=".fragments.tabs.CancelEnquiryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Set the inner LinearLayout's height to match_parent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <!-- Circle containing an icon -->
            <LinearLayout
            android:layout_width="@dimen/title_text_size_150"
            android:layout_height="@dimen/title_text_size_150"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:padding="@dimen/title_text_size_18"

            >

            <ImageView
                android:layout_width="@dimen/title_text_size_45"
                android:layout_height="@dimen/title_text_size_30"
                android:src="@drawable/card_one"

                android:tint="@color/my_light_primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow1"
                android:padding="5sp"
                android:tint="@color/my_light_primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pos1"
                android:tint="@color/my_light_primary" />

        </LinearLayout>



        <!-- TextView with "Cancel Transaction" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Transaction"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Button with "Continue" -->
        <Button
            android:id="@+id/continue_button_in_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
    </FrameLayout>
