<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/card_payment_container"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.shared.CardPayment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert/Swipe/Tap Card"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/terminalIcon"
            android:layout_width="wrap_content"
            android:padding="@dimen/title_text_size_18"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:src="@drawable/terminal1" />

        <TextView
            android:id="@+id/flicker_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for card"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:drawableTint="@color/my_light_primary"
            android:drawablePadding="8dp"/>


        <TextView
            android:id="@+id/amount_to_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_text_size_10"
            android:gravity="center"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/manual_card_entry_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manual card entry"/>

        <Button
            android:id="@+id/cancel_payment_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
    </LinearLayout>
</ScrollView>

</FrameLayout>
