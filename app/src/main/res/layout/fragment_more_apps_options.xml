<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_apps_options_container"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.settingsFragments.MoreAppsOptions">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/title_text_size_20"
        android:orientation="vertical">
            <ImageButton
                android:id="@+id/more_apps_options_btn"
                android:layout_width="@dimen/title_text_size_150"
                android:layout_height="@dimen/title_text_size_150"
                android:background="@drawable/more_apps_icon"
                android:text="Button inside inner LinearLayout"/>
    </LinearLayout>
</FrameLayout>