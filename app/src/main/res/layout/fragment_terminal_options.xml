<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/terminal_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.settingsFragments.TerminalOptions">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/title_text_size_10"
            android:orientation="vertical">
            <!-- First child layout -->
            <LinearLayout
                android:id="@+id/re_install_terminal_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_of_16dp_with_primary_color_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginStart="@dimen/title_text_size_16"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/title_text_size_25"
                  >

                    <!-- Add your content for the second column here -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Re-install Terminal"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_setup_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_text_size_10"
                android:background="@drawable/border_radius_of_16dp_with_primary_color_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginStart="@dimen/title_text_size_16"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/title_text_size_25"
                    >

                    <!-- Add your content for the second column here -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Setup"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/reconfigure_comms_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_text_size_10"
                android:background="@drawable/border_radius_of_16dp_with_primary_color_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginStart="@dimen/title_text_size_16"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/title_text_size_25"
                    >

                    <!-- Add your content for the second column here -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reconfigure Comms"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/enable_byoi_wifi_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_text_size_10"
                android:background="@drawable/border_radius_of_16dp_with_primary_color_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginStart="@dimen/title_text_size_16"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/title_text_size_25"
                    >

                    <!-- Add your content for the second column here -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable BYOI WIFI"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/exit_app_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_text_size_10"
                android:background="@drawable/border_radius_of_16dp_with_primary_color_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginStart="@dimen/title_text_size_16"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/title_text_size_25"
                    >

                    <!-- Add your content for the second column here -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit App"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>