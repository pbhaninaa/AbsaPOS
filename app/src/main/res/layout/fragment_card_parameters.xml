<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_parameters_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.settingsFragments.ReportingOptionsSubFragments.CardParameters">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/title_text_size_16"
    android:orientation="vertical">
    <!-- TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter BIN"
        android:gravity="center"
        android:textSize="@dimen/title_text_size_20" />
    <!-- EditText -->
    <EditText
        android:id="@+id/entered_bin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BIN"
        android:gravity="center"
        android:textSize="@dimen/title_text_size_20"
        android:inputType="numberDecimal" />
    <!-- Button -->
    <Button
        android:id="@+id/bin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_text_size_10"
        android:text="Confirm" />
</LinearLayout>



</FrameLayout>