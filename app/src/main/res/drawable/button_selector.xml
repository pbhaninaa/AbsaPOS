<?xml version="1.0" encoding="utf-8"?>
<!-- button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" /> <!-- Primary color when pressed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background by default -->
        </shape>
    </item>
</selector>
