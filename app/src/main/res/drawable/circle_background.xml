<!-- res/drawable/circle_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle -->
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/grey"
            />
        </shape>
    </item>
    <!-- Inner Circle -->
    <item android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- Replace with your desired background color -->
        </shape>
    </item>
</layer-list>
